---
import Layout from "#app/layouts/layout.astro";
import Photo from "#app/components/heroPhoto.astro";
import SocialLink from "#app/components/socialLink.astro";
import Link from "#app/components/link.astro";

let content = {
	name: "Ivan Gerasimov",
	description: "Fullstack JavaScript developer",
	email: {
		to: "ivan@gerasimov.dev",
		label: "ivan@gerasimov.dev",
	},
};
---

<Layout>
	<main class="page">
		<section class="profile">
			<div class="photo">
				<Photo />
			</div>

			<div class="about">
				<h1 class="name">{content.name}</h1>

				<span class="description">{content.description}</span>
			</div>
		</section>

		<section class="socialLinks">
			<SocialLink
				name="linkedIn"
				url="https://linkedin.com/in/ivan-gerasimov"
				label="LinkedIn profile"
			/>

			<SocialLink
				name="github"
				url="https://github.com/ivan-gerasimov-1"
				label="GitHub profile"
			/>
		</section>

		<section class="email">
			<Link to={content.email.to} label={content.email.label} />
		</section>
	</main>
</Layout>

<style>
	.name {
		display: flex;

		margin: 0;

		font-family: var(--ff-transitional);
		font-size: 8.25vw;
		font-weight: 600;
		letter-spacing: 1.5px;
		line-height: 1;
		white-space: nowrap;
	}

	.description,
	.email {
		font-family: var(--ff-monospace);
		font-size: 1.5rem;

		color: var(--fc-200);

		margin-top: 10px;

		font-size: clamp(1rem, 2vw, 1.5rem);
		letter-spacing: -0.5px;
	}

	.profile {
		display: grid;
		grid-template-columns: 1fr auto;
		column-gap: 2rem;

		@media (max-width: 768px) {
			& {
				display: block;
			}
		}
	}

	.about {
		display: flex;
		flex-direction: column;
		justify-content: flex-end;

		@media (max-width: 768px) {
			& {
				margin-top: 15px;
			}
		}
	}

	.photo {
		display: flex;
		align-items: center;

		margin-left: -0.25rem;

		@media (max-width: 768px) {
			& {
				justify-content: center;
				margin-left: 0;
			}
		}
	}

	.socialLinks {
		display: grid;
		grid-template-columns: 2.75rem 2.75rem auto;
		grid-template-rows: 2.75rem;
		column-gap: 1.5rem;

		margin-top: 50px;
	}
</style>
