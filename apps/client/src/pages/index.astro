---
import Layout from "#app/layouts/layout.astro";
import Photo from "#app/components/heroPhoto.astro";
import SocialLink from "#app/components/socialLink.astro";
import Link from "#app/components/link.astro";
import Divider from "#app/components/divider.astro";

let content = {
	name: "Ivan Gerasimov",
	role: "Software Engineer (JavaScript, Fullstack)",
	description: `
		<strong>Senior Fullstack Engineer with 9 years of experience.</strong> Specializing in
		development using <strong>TypeScript</strong>, <strong>React</strong> and <strong>Node.js</strong>, as well as web
		application architecture design, including local-first applications with
		extensive client-side logic. Experienced in team management, process
		establishment, and cross-team collaboration in a large-scale product.
	`,
	email: {
		to: "ivan@gerasimov.dev",
		label: "ivan@gerasimov.dev",
	},
};
---

<Layout>
	<main class="main">
		<div class="profile">
			<Photo />

			<div class="about">
				<h1 class="name">{content.name}</h1>

				<span class="role">{content.role}</span>
			</div>

			<div class="description" set:html={content.description} />
		</div>
	</main>

	<footer class="footer">
		<Divider />

		<div class="footerContent">
			<div class="socialLinks">
				<SocialLink
					name="linkedIn"
					url="https://linkedin.com/in/ivan-gerasimov"
					label="LinkedIn profile"
				/>

				<SocialLink
					name="github"
					url="https://github.com/ivan-gerasimov-1"
					label="GitHub profile"
				/>
			</div>

			<div class="email">
				<Link to={content.email.to} label={content.email.label} />
			</div>
		</div>
	</footer>
</Layout>

<style>
	strong {
		font-weight: 600;
	}

	.main {
		display: flex;
		justify-content: center;
		align-items: center;

		margin: auto 0;
	}

	.profile {
		display: grid;
		grid-template-columns: 1fr auto;
		grid-gap: 2rem;

		@media (max-width: 768px) {
			& {
				display: flex;
				flex-direction: column;
			}
		}
	}

	.about {
		display: flex;
		flex-direction: column;
		justify-content: flex-end;

		@media (max-width: 768px) {
			& {
				margin-top: 1rem;
			}
		}
	}

	.name {
		margin: 0;

		font-family: var(--ff-transitional);
		font-size: clamp(1rem, 8vw, 7rem);
		font-weight: 800;

		letter-spacing: -0.5px;
		line-height: 1;
		white-space: nowrap;
	}

	.role {
		margin-top: 0.25rem;
		font-family: var(--ff-monospace);
		font-size: 1.5rem;

		color: var(--fc-200);

		font-size: clamp(1rem, 2vw, 1.5rem);
		letter-spacing: -0.5px;
	}

	.description {
		max-width: 40rem;
		grid-column: 2;
		grid-row: 2;
		font-family: var(--ff-monospace);
		font-size: 1rem;
		line-height: 1.4;

		color: var(--fc-200);
	}

	.footer {
		margin-top: 1.5rem;
	}

	.footerContent {
		display: flex;
		justify-content: space-between;
		align-items: flex-end;

		margin: 0.625rem;
	}

	.socialLinks {
		display: grid;
		grid-template-columns: 1.5rem 1.5rem auto;
		grid-gap: 1rem;
	}

	.email {
		font-family: var(--ff-monospace);
		font-size: 1rem;
		letter-spacing: -0.5px;

		color: var(--fc-200);
	}
</style>
