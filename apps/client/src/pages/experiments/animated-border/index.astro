---
import ExperimentsLayout from "#app/layouts/experimentsLayout.astro";

import { meta } from "#app/pages/experiments/meta";
---

<ExperimentsLayout {...meta}>
	<article>
		<h2>Animated Border</h2>

		<section>
			<div class="card"></div>
		</section>
	</article>

	<style>
		@property --gradient-angle {
			syntax: "<angle>";
			inherits: false;
			initial-value: 0deg;
		}

		.card {
			position: relative;

			display: flex;
			align-items: center;
			justify-content: center;

			/* padding: 0.75rem 2rem; */

			min-height: 270px;
			min-width: 325px;

			background-color: var(--white);

			/* border: 6px solid rgba(255, 255, 255, 0.5); */
			border-radius: 40px;

			box-shadow: 0px 20px 30px -10px rgba(0, 0, 0, 0.125);

			&::before,
			&::after {
				position: absolute;
				width: calc(100% + 10px);
				height: calc(100% + 10px);

				content: "";

				background-image: conic-gradient(
					from var(--gradient-angle),
					transparent 1%,
					#69247c,
					#da498d,
					#fac67a,
					#69247c
				);

				border-radius: calc(40px + 5px);

				opacity: 0.625;
				z-index: -1;

				animation: 5s gradientRotation linear infinite;
			}

			&::before {
				filter: blur(1px);
				opacity: 0.625;
			}

			&::after {
				filter: blur(25px);
				opacity: 0.5;
			}
		}

		@keyframes gradientRotation {
			from {
				--gradient-angle: 0deg;
			}

			to {
				--gradient-angle: 360deg;
			}
		}
	</style>
</ExperimentsLayout>
