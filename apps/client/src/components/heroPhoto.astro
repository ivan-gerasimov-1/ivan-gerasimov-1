---
import { Image } from "astro:assets";

import photo from "#app/assets/ivan-gerasimov_headshot-photo.jpeg";

let content = {
	alt: "Ivan Gerasimov, headshot photo",
};
---

<Image
	class="photo"
	src={photo}
	alt={content.alt}
	width={130}
	quality={90}
	densities={[1, 1.5, 2, 2.5, 3]}
/>

<style>
	.photo {
		border-radius: 100%;
		box-shadow: 0 0 0 5px var(--white);

		background-color: var(--white);
		background-image: url("/ivan-gerasimov_headshot-photo_placeholder.webp");
	}
</style>
