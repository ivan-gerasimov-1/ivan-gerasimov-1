---
import { Image } from "astro:assets";

import photo from "#app/assets/ivan-gerasimov_headshot-photo.jpeg";
import placeholder from "#app/assets/ivan-gerasimov_headshot-photo_placeholder.webp?inline";

let content = {
	alt: "Ivan Gerasimov, headshot photo",
};
---

<Image
	class="photo"
	src={photo}
	alt={content.alt}
	width={130}
	quality={90}
	densities={[1, 1.5, 2, 2.5, 3]}
	style={{
		"--placeholder-url": `url(${placeholder})`,
	}}
/>

<style>
	.photo {
		margin: 5px;

		border-radius: 100%;
		box-shadow: 0 0 0 5px rgba(255, 255, 255, 0.125);

		background-color: var(--color-white);
		background-image: var(--placeholder-url);
		background-size: cover;
	}
</style>
