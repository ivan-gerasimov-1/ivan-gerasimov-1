---
type Props = {
	id?: string;
	class?: string;
	style?: {
		gridColumn: string | number;
		gridRow: string | number;
	};
	type?: "column" | "line";
};

let { id, class: className = [], style, type = "column" } = Astro.props;
---

<div
	id={id}
	class:list={[
		"d-flex",
		type,
		className,
		{
			"f-column": type === "column",
		},
	]}
	style={style}
>
	<slot />
</div>
