---
type Props = {
	class?: string;
	url: string;
};

let { class: className, url } = Astro.props;
---

<a class:list={["link", className]} href={url}>
	<slot />
</a>

<style>
	.link {
		color: inherit;

		text-decoration: none;

		transition: color 0.15s ease;

		&:hover {
			color: var(--c-link);

			cursor: pointer;
		}
	}
</style>
