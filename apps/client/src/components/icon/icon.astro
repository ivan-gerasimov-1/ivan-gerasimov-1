---
import GitHub from "./icons/github.svg";
import LinkedIn from "./icons/linkedin.svg";

type TIconName = "github" | "linkedIn";

const EIcon = {
	github: GitHub,
	linkedIn: LinkedIn,
} as const;

type Props = {
	name: TIconName;
	class?: string;
	width?: string | number;
	height?: string | number;
	hasHover?: boolean;
};

let {
	name,
	class: className,
	width = "100%",
	height = "100%",
	hasHover = false,
} = Astro.props;

let TargetIcon = EIcon[name];
---

<TargetIcon
	class:list={[
		{
			hover: hasHover,
		},
		className,
	]}
	width={width}
	height={height}
/>

<style>
	.hover {
		transition: all 0.15s ease-in-out;

		will-change: transform;

		&:hover {
			color: var(--orange);

			transform: scale(0.9);
		}
	}
</style>
