---
import Home from "./icons/home.svg";

import GitHub from "./icons/github.svg";
import LinkedIn from "./icons/linkedin.svg";

import Apliteni from "./icons/apliteni.svg";
import Arm from "./icons/arm.svg";
import Connio from "./icons/connio.svg";
import EFResearch from "./icons/ef-research.svg";
import FundraiseUp from "./icons/fundraise-up.svg";
import PostcardAndTag from "./icons/postcard-and-tag.svg";

type TIconName =
	| "home"
	| "github"
	| "linkedIn"
	| "arm"
	| "connio"
	| "efResearch"
	| "fundraiseUp"
	| "postcardAndTag"
	| "apliteni";

const EIcon = {
	home: Home,

	github: GitHub,
	linkedIn: LinkedIn,

	arm: Arm,
	connio: Connio,
	efResearch: EFResearch,
	fundraiseUp: FundraiseUp,
	postcardAndTag: PostcardAndTag,
	apliteni: Apliteni,
} as const;

type Props = {
	name: TIconName;
	class?: string;
	width?: string | number;
	height?: string | number;
	hasHover?: boolean;
};

let {
	name,
	class: className,
	width = "100%",
	height = "100%",
	hasHover = false,
} = Astro.props;

let TargetIcon = EIcon[name];
---

<TargetIcon
	class:list={[
		{
			"transition will-change-transform hover:text-(--color-orange) hover:scale-95":
				hasHover,
		},
		className,
	]}
	width={width}
	height={height}
/>
