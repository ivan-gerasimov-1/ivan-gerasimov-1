---
import "@fontsource/fira-sans/300.css";
import "@fontsource/fira-sans/400.css";
import "@fontsource/fira-sans/500.css";

import "@fontsource/jetbrains-mono/400.css";

let locale = Astro.currentLocale;

let content = {
	keywords: [
		"frontend",
		"front-end",
		"front end",
		"developer",
		"engineer",
		"software",
		"software engineer",
		"software developer",
		"javascript",
		"typescript",
		"js",
		"ts",
		"react",
		"reactjs",
		"vue",
		"vuejs",
		"vue.js",
		"node",
		"node.js",
		"nodejs",
		"domain driven design",
		"ddd",
		"clean architecture",
		"solid",
		"oop",
		"object oriented programming",
	].join(", "),

	description: "Ivan Gerasimov | Software Engineer, CV",
	title: "Ivan Gerasimov | CV",
};
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<link rel="icon" href="/favicon.ico" />

		<meta name="keywords" content={content.keywords} />
		<meta name="description" content={content.description} />

		<title>{content.title}</title>
	</head>

	<body>
		<slot />
	</body>
</html>

<style>
	:root {
		--c-primary: #1f1f1f;
		--c-secondary: #666;
		--c-link: #1155cc;
		--c-pill: #f3f3f3;
		--c-background: #fafafa;

		--white: #f5f5f5;
		--grey: #b8b4bf;
		--orange: #fb773c;
		--black: #25292e;

		--ff-mono: "JetBrains Mono", monospace;
		--ff-sans: "Fira Sans", sans-serif;

		--fc-100: var(--white);
		--fc-200: var(--grey);
		--fc-300: var(--black);
		--fc-link: var(--fc-200);
		--fc-link-hover: var(--orange);

		--clr-body-background: var(--black);

		--ff-transitional: Charter, "Bitstream Charter", "Sitka Text", Cambria,
			serif;
		--ff-monospace: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo,
			Consolas, "DejaVu Sans Mono", monospace;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--c-primary: #fafafa;
			--c-secondary: #b8b4bf;
			--c-link: #fb773c;
			--c-pill: #1f1f1f;
			--c-background: #0e0e0e;
		}
	}

	:global(*),
	:global(*::after),
	:global(*::before) {
		box-sizing: border-box;

		cursor: default;
	}

	:global(h1),
	:global(h2),
	:global(h3),
	:global(p),
	:global(ul),
	:global(a) {
		margin: 0;
		padding: 0;

		font-weight: 400;
	}

	:global(ul) {
		list-style-type: none;
	}

	:global(strong) {
		font-weight: 500;
	}

	:global(.mt-80) {
		margin-top: 0.125rem;
	}

	:global(.mt-90) {
		margin-top: 0.25rem;
	}

	:global(.mt-100) {
		margin-top: 0.625rem;
	}

	:global(.mt-110) {
		margin-top: 0.75rem;
	}

	body {
		margin: 0;
		padding: 0;

		display: flex;
		justify-content: space-between;
		flex-direction: column;

		cursor: default;

		font-family: var(--ff-sans);
		font-size: 9pt;
		line-height: 1;

		background-color: var(--c-background);

		color: var(--c-primary);
	}
</style>
