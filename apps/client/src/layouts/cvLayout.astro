---
import "@fontsource/fira-sans/300.css";
import "@fontsource/fira-sans/400.css";
import "@fontsource/fira-sans/500.css";

import "@fontsource/jetbrains-mono/400.css";

let locale = Astro.currentLocale;

let content = {
	keywords: [
		"frontend",
		"front-end",
		"front end",
		"developer",
		"engineer",
		"software",
		"software engineer",
		"software developer",
		"javascript",
		"typescript",
		"js",
		"ts",
		"react",
		"reactjs",
		"vue",
		"vuejs",
		"vue.js",
		"node",
		"node.js",
		"nodejs",
		"domain driven design",
		"ddd",
		"clean architecture",
		"solid",
		"oop",
		"object oriented programming",
	].join(", "),

	description: "Ivan Gerasimov | Software Engineer, CV",
	title: "Ivan Gerasimov | CV",
};
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<link rel="icon" href="/favicon.ico" />

		<meta name="keywords" content={content.keywords} />
		<meta name="description" content={content.description} />

		<title>{content.title}</title>
	</head>

	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--c-primary: #1f1f1f;
		--c-secondary: #666;
		--c-link: #1155cc;
		--c-pill: #f3f3f3;
		--c-background: #fafafa;

		--white: #f5f5f5;
		--grey: #b8b4bf;
		--orange: #fb773c;
		--black: #25292e;

		--ff-mono: "JetBrains Mono", monospace;
		--ff-sans: "Fira Sans", sans-serif;

		--lh-base: 1;
		--lh-secondary: 1.35;
		--lh-primary: 1.6;

		--fs-primary-100: 9pt;
		--fs-primary-110: 12pt;
		--fs-primary-120: 14pt;
		--fs-secondary-100: 8pt;
		--fs-secondary-110: 10pt;

		--fw-90: 300;
		--fw-100: 400;
		--fw-110: 500;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--c-primary: #fafafa;
			--c-secondary: #b8b4bf;
			--c-link: #fb773c;
			--c-pill: #1f1f1f;
			--c-background: #0e0e0e;
		}
	}

	*,
	*::after,
	*::before {
		box-sizing: border-box;

		cursor: default;
	}

	h1,
	h2,
	h3,
	p,
	ul,
	a {
		margin: 0;
		padding: 0;

		font-weight: var(--fw-100);
	}

	ul {
		list-style-type: none;
	}

	strong {
		font-weight: var(--fw-110);
	}

	.mt-80 {
		margin-top: 0.125rem;
	}

	.mt-90 {
		margin-top: 0.25rem;
	}

	.mt-100 {
		margin-top: 0.625rem;
	}

	.mt-110 {
		margin-top: 0.75rem;
	}

	.mt-200 {
		margin-top: 2rem;
	}

	.pt-95 {
		padding-top: 0.375rem;
	}

	.pb-95 {
		padding-bottom: 0.375rem;
	}

	.pr-120 {
		padding-right: 0.825rem;
	}

	.d-flex {
		display: flex;
	}

	.f-column {
		flex-direction: column;
	}

	.f-space-between {
		justify-content: space-between;
	}

	.f-end {
		align-items: flex-end;
	}

	.font-secondary {
		font-family: var(--ff-mono);
		font-size: var(--fs-secondary-100);

		color: var(--c-secondary);

		line-height: var(--lh-secondary);
	}

	.fc-primary {
		color: var(--c-primary);
	}

	.fc-secondary {
		color: var(--c-secondary);
	}

	.fs-primary-120 {
		font-size: var(--fs-primary-120);
	}

	.fs-secondary-110 {
		font-size: var(--fs-secondary-110);
	}

	.lh-base {
		line-height: var(--lh-base);
	}

	.lh-secondary {
		line-height: var(--lh-secondary);
	}

	.lh-primary {
		line-height: var(--lh-primary);
	}

	.listItem {
		position: relative;

		line-height: var(--lh-secondary);

		&:before {
			position: absolute;

			top: 0.035rem;
			left: -0.625rem;

			content: "â€¢";
		}
	}

	body {
		margin: 0;
		padding: 0;

		display: flex;
		justify-content: space-between;
		flex-direction: column;

		cursor: default;

		font-family: var(--ff-sans);
		font-size: var(--fs-primary-100);
		line-height: var(--lh-base);

		background-color: var(--c-background);

		color: var(--c-primary);
	}

	@media print {
		body {
			background-color: unset;
		}
	}
</style>
