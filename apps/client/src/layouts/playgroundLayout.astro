---
import BaseLayout from "#app/layouts/baseLayout.astro";

import Divider from "#app/components/divider.astro";
import BackgroundNoise from "#app/components/backgroundNoise.astro";

import type { TPageMeta } from "#app/i18n/types.ts";

type Props = TPageMeta & {
	playgroundTitle: string;
};

let { title, description, keywords, playgroundTitle } = Astro.props;
---

<BaseLayout title={title} description={description} keywords={keywords}>
	<BackgroundNoise />

	<aside>
		<nav>
			<a href="/">Home</a>
			<Divider class="divider" />
			<a href="/playground/scroll-snap">Scroll Snap</a>
			<a href="/playground/button-gradient-border">Button Gradient Border</a>
			<a href="/playground/animated-border">Animated Border</a>
		</nav>
	</aside>

	<header>
		<h1>Playground</h1>
		<h2>{playgroundTitle}</h2>
	</header>

	<main>
		<slot />
	</main>
</BaseLayout>

<style>
	/* jetbrains-mono-latin-wght-normal */
	@font-face {
		font-family: "JetBrains Mono Variable";
		font-style: normal;
		font-display: swap;
		font-weight: 100 800;
		src: url(@fontsource-variable/jetbrains-mono/files/jetbrains-mono-latin-wght-normal.woff2)
			format("woff2-variations");
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
			U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191,
			U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	/* jetbrains-mono-cyrillic-wght-normal */
	@font-face {
		font-family: "JetBrains Mono Variable";
		font-style: normal;
		font-display: swap;
		font-weight: 100 800;
		src: url(@fontsource-variable/jetbrains-mono/files/jetbrains-mono-cyrillic-wght-normal.woff2)
			format("woff2-variations");
		unicode-range: U+0301, U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
	}

	:root {
		--color-white: #f5f5f5;
		--color-black: #25292e;

		--color-font-100: var(--color-white);

		--color-body-background: var(--color-black);

		--ff-monospace: "JetBrains Mono Variable", ui-monospace, "Cascadia Code",
			"Source Code Pro", Menlo, Consolas, "DejaVu Sans Mono", monospace;
	}

	body {
		display: grid;
		grid-template-columns: auto 1fr;
		grid-template-rows: auto 1fr;

		min-height: 100dvh;

		color: var(--color-font-100);

		background-color: var(--color-body-background);

		font-family: var(--ff-monospace);
	}

	aside {
		grid-column: 1;
		grid-row: 1 / 3;
	}

	header {
		grid-column: 2;
		grid-row: 1;

		padding-inline: 15px;
	}

	main {
		grid-column: 2;
		grid-row: 2;

		padding-inline: 15px;

		display: flex;
		justify-content: center;
		align-items: center;
	}

	nav {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;

		padding: 1.625rem 15px;

		font-size: 0.75rem;

		& > a {
			width: 100%;

			padding: 0.75rem 1rem;
			color: var(--color-font-100);

			background-color: rgba(255, 255, 255, calc(0.125 / 3));

			border: 1px solid rgba(255, 255, 255, calc(0.125 / 4));
			border-radius: 13px;

			appearance: none;
			text-decoration: none;

			transition: border-color 0.15s ease-in-out;

			&:hover {
				border: 1px solid rgba(255, 255, 255, calc(0.125 / 1.5));
			}
		}
	}

	.divider {
		width: 50%;
	}
</style>
