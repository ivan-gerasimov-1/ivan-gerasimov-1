---
import BaseLayout from "#app/layouts/baseLayout.astro";

import "@fontsource/fira-sans/300.css";
import "@fontsource/fira-sans/400.css";
import "@fontsource/fira-sans/500.css";

import "@fontsource/jetbrains-mono/400.css";

type Props = {
	title: string;
	description: string;
	keywords: string;
};

let { title, description, keywords } = Astro.props;
---

<BaseLayout title={title} description={description} keywords={keywords}>
	<slot />
</BaseLayout>

<style is:global>
	:root {
		--c-primary: #1f1f1f;
		--c-secondary: #666;
		--c-link: #1155cc;
		--c-pill: #f3f3f3;
		--c-background: #fafafa;

		--white: #f5f5f5;
		--grey: #b8b4bf;
		--orange: #fb773c;
		--black: #25292e;

		--ff-mono: "JetBrains Mono", monospace;
		--ff-sans: "Fira Sans", sans-serif;

		--lh-base: 1;
		--lh-secondary: 1.33;
		--lh-primary: 1.55;

		--fs-primary-100: 9pt;
		--fs-primary-110: 12pt;
		--fs-primary-120: 14pt;
		--fs-secondary-100: 8pt;
		--fs-secondary-110: 10pt;

		--fw-90: 300;
		--fw-100: 400;
		--fw-110: 500;

		--resume-padding: 2.5rem 1.5rem;
		/**
		 * @description
		 * 49.6rem is around 210mm in length, which is the width of an A4 paper
		 */
		--resume-width: 49.6rem;
	}

	html[lang="ru"] {
		/**
		 * @description
		 * Slightly lower line height for Russian text to fit the first two
		 * companies on one page
		 */
		--lh-primary: 1.49;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--c-primary: #fafafa;
			--c-secondary: #b8b4bf;
			--c-link: #fb773c;
			--c-pill: #1f1f1f;
			--c-background: #0e0e0e;
		}
	}

	@media print {
		:root {
			--c-background: transparent;

			/**
			* @description
			* 0.125in on the left is required for list item bullets
			*/
			--resume-padding: 0 0 0 0.125in;
			/**
		   * @description
		   * Size of A4 paper
		   */
			--resume-width: 210mm;

			--fs-primary-100: 9pt;
			--fs-primary-110: 12pt;
			--fs-primary-120: 14pt;

			--fs-secondary-100: 8pt;
			--fs-secondary-110: 10pt;
		}
	}

	h1,
	h2,
	h3,
	p,
	ul,
	a {
		margin: 0;
		padding: 0;

		font-weight: var(--fw-100);
	}

	ul {
		list-style-type: none;
	}

	strong {
		font-weight: var(--fw-110);
	}

	body {
		display: flex;
		justify-content: space-between;
		flex-direction: column;

		font-family: var(--ff-sans);
		font-size: var(--fs-primary-100);
		line-height: var(--lh-base);

		background-color: var(--c-background);

		color: var(--c-primary);
	}

	.mt-80 {
		margin-top: 0.125rem;
	}

	.mt-90 {
		margin-top: 0.25rem;
	}

	.mt-100 {
		margin-top: 0.625rem;
	}

	.mt-110 {
		margin-top: 0.75rem;
	}

	.mt-200 {
		margin-top: 1.875rem;
	}

	.pt-95 {
		padding-top: 0.375rem;
	}

	.pb-95 {
		padding-bottom: 0.375rem;
	}

	.pr-120 {
		padding-right: 0.825rem;
	}

	.d-flex {
		display: flex;
	}

	.f-column {
		flex-direction: column;
	}

	.f-space-between {
		justify-content: space-between;
	}

	.f-end {
		align-items: flex-end;
	}

	.font-secondary {
		font-family: var(--ff-mono);
		font-size: var(--fs-secondary-100);

		color: var(--c-secondary);

		line-height: var(--lh-secondary);
	}

	.fc-primary {
		color: var(--c-primary);
	}

	.fc-secondary {
		color: var(--c-secondary);
	}

	.fs-primary-120 {
		font-size: var(--fs-primary-120);
	}

	.fs-secondary-110 {
		font-size: var(--fs-secondary-110);
	}

	.lh-base {
		line-height: var(--lh-base);
	}

	.lh-secondary {
		line-height: var(--lh-secondary);
	}

	.lh-primary {
		line-height: var(--lh-primary);
	}

	.listItem {
		position: relative;

		line-height: var(--lh-secondary);

		&:before {
			position: absolute;

			top: 0.035rem;
			left: -0.625rem;

			content: "â€¢";
		}
	}
</style>
