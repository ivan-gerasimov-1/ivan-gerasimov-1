---
import BaseLayout from "#app/layouts/baseLayout.astro";

import BackgroundNoise from "#app/components/backgroundNoise.astro";
import BackgroundImage from "#app/components/backgroundImage.astro";

import type { TPageMeta } from "#app/i18n/types.ts";

type Props = TPageMeta;

let { title, description, keywords } = Astro.props;
---

<BaseLayout
	class="flex flex-col justify-between"
	title={title}
	description={description}
	keywords={keywords}
>
	<BackgroundNoise>
		<BackgroundImage />
	</BackgroundNoise>

	<slot />
</BaseLayout>

<style is:global>
	/* noto-serif-display-latin-900-normal */
	@font-face {
		font-family: "Noto Serif Display";
		font-style: normal;
		font-display: swap;
		font-weight: 900;
		src:
			url(@fontsource/noto-serif-display/files/noto-serif-display-latin-900-normal.woff2)
				format("woff2"),
			url(@fontsource/noto-serif-display/files/noto-serif-display-latin-900-normal.woff)
				format("woff");
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
			U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191,
			U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	/* noto-serif-display-cyrillic-900-normal */
	@font-face {
		font-family: "Noto Serif Display";
		font-style: normal;
		font-display: swap;
		font-weight: 900;
		src:
			url(@fontsource/noto-serif-display/files/noto-serif-display-cyrillic-900-normal.woff2)
				format("woff2"),
			url(@fontsource/noto-serif-display/files/noto-serif-display-cyrillic-900-normal.woff)
				format("woff");
		unicode-range: U+0301, U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
	}

	/* jetbrains-mono-latin-wght-normal */
	@font-face {
		font-family: "JetBrains Mono Variable";
		font-style: normal;
		font-display: swap;
		font-weight: 100 800;
		src: url(@fontsource-variable/jetbrains-mono/files/jetbrains-mono-latin-wght-normal.woff2)
			format("woff2-variations");
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
			U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191,
			U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	/* jetbrains-mono-cyrillic-wght-normal */
	@font-face {
		font-family: "JetBrains Mono Variable";
		font-style: normal;
		font-display: swap;
		font-weight: 100 800;
		src: url(@fontsource-variable/jetbrains-mono/files/jetbrains-mono-cyrillic-wght-normal.woff2)
			format("woff2-variations");
		unicode-range: U+0301, U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
	}

	:root {
		--white: var(--color-zinc-100);
		--grey: oklch(80% 0 300);
		--orange: var(--color-orange-600);
		--black: oklch(28.5% 0.01 255);

		--color-font-100: var(--white);
		--color-font-200: var(--grey);
		--fc-link: var(--color-font-200);
		--fc-link-hover: var(--orange);

		--clr-body-background: var(--black);

		/**
		 * @description
		 * Just for reference, not used in the codebase
		 */
		--breakpoint-m: 48rem; /** 768px */

		--ff-transitional: "Noto Serif Display", Charter, "Bitstream Charter",
			"Sitka Text", Cambria, serif;
		--ff-monospace: "JetBrains Mono Variable", ui-monospace, "Cascadia Code",
			"Source Code Pro", Menlo, Consolas, "DejaVu Sans Mono", monospace;
	}

	body {
		color: var(--color-font-100);

		background-color: var(--clr-body-background);
	}
</style>
