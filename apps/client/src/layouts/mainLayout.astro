---
import "@fontsource/noto-serif-display/900.css";

import BaseLayout from "#app/layouts/baseLayout.astro";

import PageBackground from "#app/components/pageBackground.astro";

type Props = {
	title: string;
	description: string;
	keywords: string;
};

let { title, description, keywords } = Astro.props;
---

<BaseLayout title={title} description={description} keywords={keywords}>
	<PageBackground />

	<slot />
</BaseLayout>

<style>
	:root {
		--white: #f5f5f5;
		--grey: #b8b4bf;
		--orange: #fb773c;
		--black: #25292e;

		--fc-100: var(--white);
		--fc-200: var(--grey);
		--fc-300: var(--black);
		--fc-link: var(--fc-200);
		--fc-link-hover: var(--orange);

		--clr-body-background: var(--black);

		/**
		 * @description
		 * Just for reference, not used in the codebase
		 */
		--breakpoint-m: 48rem; /** 768px */

		--ff-transitional: "Noto Serif Display", Charter, "Bitstream Charter",
			"Sitka Text", Cambria, serif;
		--ff-monospace: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo,
			Consolas, "DejaVu Sans Mono", monospace;
	}

	body {
		min-height: 100vh;

		padding: 3rem 2rem;

		display: flex;
		justify-content: space-between;
		flex-direction: column;

		color: var(--fc-100);

		background-color: var(--clr-body-background);

		cursor: default;

		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: antialiased;
	}
</style>
